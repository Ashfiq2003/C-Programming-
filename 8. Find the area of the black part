#include<stdio.h>
#include<math.h>
   void main()    
	{        
	  float a,b,c,r,s,area1,area2,area;        
	  printf("Input the Value of a,b,c,r=");        
	  scanf("%f %f %f %f",&a,&b,&c,&r);        
	  s=(a+b+c)/2;       
	  area1= sqrt(s*(s-a)*(s-b)*(s-c));        
	  area2 = 3.1416*r*r;        
	  area = area1-area2;        
	  printf("The Area: %f",area);   
 }
